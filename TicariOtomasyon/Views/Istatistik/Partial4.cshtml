@model IEnumerable<TicariOtomasyon.Models.Siniflar.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Striped Full Width Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Oran</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>

                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                <tr>
                    <td>@{ sirano++;} @sirano</td>
                    <td>@x.Marka</td>

                    @if (x.Adet == 1)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 10%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@x.Adet</span></td>
                    }

                    @if (x.Adet == 2)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-warning" style="width: 20%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-warning">@x.Adet</span></td>
                    }

                    @if (x.Adet == 3)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-info" style="width: 30%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-info">@x.Adet</span></td>
                    }

                    @if (x.Adet == 4)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-success" style="width: 40%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-success">@x.Adet</span></td>
                    }

                </tr>

                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
