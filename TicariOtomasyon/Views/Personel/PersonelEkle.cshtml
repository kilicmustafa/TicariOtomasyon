
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model TicariOtomasyon.Models.Siniflar.Personel


@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data"} ))


{
<script src="~/Scripts/jquery-3.4.1.js"></script>

<div class="form-group">

    @Html.LabelFor(x => x.PersonelAdSoyad)
    @Html.TextBoxFor(x => x.PersonelAdSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PersonelGörsel)
    <input class="d-block" type="file" name="personelGörsel" />

    <br />
    @Html.LabelFor(x => x.departman.DepartmanAd)
    @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.depList, new { @class = "form-control" })

    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })



</div>

<button class="btn btn-info" id="btn1">Ekle</button>

}


<script>

    $("#btn1").click(function () {

        alert("Personel başarılı bir şekilde eklendi");

    });


</script>
