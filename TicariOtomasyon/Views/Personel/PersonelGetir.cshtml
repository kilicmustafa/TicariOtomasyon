
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@model TicariOtomasyon.Models.Siniflar.Personel


@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{


    <div class="form-group">
        @Html.HiddenFor(x => x.PersonelId)
        @Html.LabelFor(x => x.PersonelAdSoyad)
        @Html.TextBoxFor(x => x.PersonelAdSoyad, new { @class = "form-control" })

        @Html.LabelFor(x => x.PersonelGörsel)
        @Html.TextBoxFor(x => x.PersonelGörsel, new { @class = "form-control" })


        @Html.LabelFor(x => x.departman.DepartmanAd)
        @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.depList, new { @class = "form-control" })

        @Html.LabelFor(x => x.Durum)
        @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })



    </div>

    <button class="btn btn-info">Güncelle</button>

}

