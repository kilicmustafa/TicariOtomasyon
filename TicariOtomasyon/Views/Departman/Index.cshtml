@using TicariOtomasyon.Models.Siniflar
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="index.html">Departman</a></li>
    <li class="breadcrumb-item active">Departman Listele</li>s

</ol>

<a href="/Departman/DepartmanEkle" style="margin-bottom:10px;" class="btn btn-primary btn-block">Yeni Ekle</a>




<table class="table table-hover">
    <thead>
        <tr>

            <th>Id</th>
            <th>Ad</th>
            
        </tr>
    </thead>


    <tbody>

        @foreach (var x in Model)
        {
            <tr>
                <td>@x.DepartmanId</td>
                <td>@x.DepartmanAd</td>
                
                <td><a class="btn btn-warning" href="/Departman/DepartmanGetir/@x.DepartmanId">Güncelle</a>  </td>
                <td><a class="btn btn-danger" href="/Departman/DepartmanSil/@x.DepartmanId">Sil</a></td>
                <td><a class="btn btn-success" href="/Departman/DepartmanPersonelDetay/@x.DepartmanId">Departman Detay</a></td>

            </tr>


        }


    </tbody>


</table>


@Html.PagedListPager((IPagedList)Model, sayfa=>Url.Action("Index", new {sayfa}))

